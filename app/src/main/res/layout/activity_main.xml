<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.administrater.mytestwjika.MainActivity">

   <Button
       android:id="@+id/button_permission"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="判断是否开启通知权限"/>
   <TextView
       android:id="@+id/text_address"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="10dp"
       android:gravity="right"
       android:text="文字显示位置"/>
      <EditText
          android:id="@+id/edit_settext"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="在代码中设置文字"/>
   <Button
       android:id="@+id/bottom_dialog"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="从底部弹出弹窗"/>
   <Button
       android:id="@+id/self_dialog"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="自定义弹窗"/>
   <Button
       android:id="@+id/button_location"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="获取定位服务是否开启"/>
   <Button
       android:id="@+id/button_notification"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="获取通知服务是否开启"/>
</LinearLayout>
